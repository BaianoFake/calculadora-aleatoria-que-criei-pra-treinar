<MainApp>:
    orientation: 'vertical'

    TextInput:
        id: solution
        multiline: False
        readonly: True
        halign: 'right'
        font_size: 55

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: '7'
            on_press: root.on_button_press(self)

        Button:
            text: '8'
            on_press: root.on_button_press(self)

        Button:
            text: '9'
            on_press: root.on_button_press(self)

        Button:
            text: '/'
            on_press: root.on_button_press(self)

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: '4'
            on_press: root.on_button_press(self)

        Button:
            text: '5'
            on_press: root.on_button_press(self)

        Button:
            text: '6'
            on_press: root.on_button_press(self)

        Button:
            text: '*'
            on_press: root.on_button_press(self)

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: '1'
            on_press: root.on_button_press(self)

        Button:
            text: '2'
            on_press: root.on_button_press(self)

        Button:
            text: '3'
            on_press: root.on_button_press(self)

        Button:
            text: '-'
            on_press: root.on_button_press(self)

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: '.'
            on_press: root.on_button_press(self)

        Button:
            text: '0'
            on_press: root.on_button_press(self)

        Button:
            text: 'C'
            on_press: root.on_button_press(self)

        Button:
            text: '+'
            on_press: root.on_button_press(self)

    Button:
        text: '='
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: root.on_solution(self)
